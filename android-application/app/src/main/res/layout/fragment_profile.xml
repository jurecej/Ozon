<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_15sdp"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="@dimen/_60sdp">

        <ImageView
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_64sdp"
            android:layout_margin="@dimen/_15sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/baseline_person" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="@string/uname_label"
        android:textAlignment="center"
        android:textColor="@color/unselect"
        android:textSize="@dimen/_10ssp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/uname_input"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--<com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>-->

    <TextView
        android:id="@+id/skin_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="@string/select_skin_type"
        android:textAlignment="center"
        android:textColor="@color/unselect"
        android:textSize="@dimen/_10ssp" />

    <!--com.google.android.material.textfield.TextInputLayout
         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/_8sdp">

         <com.google.android.material.textfield.TextInputEditText
             android:id="@+id/et_skintype"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Skin type"
             android:inputType="number" />
     </com.google.android.material.textfield.TextInputLayout-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_skintype_I"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:background="@drawable/button_rounded"
            android:text="I"
            android:textAllCaps="false"
            android:textColor="@color/unselect"
            android:textSize="@dimen/_13ssp"
            app:backgroundTint="@color/skin_type_I" />

        <Button
            android:id="@+id/btn_skintype_II"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:background="@drawable/button_rounded"
            android:text="II"
            android:textAllCaps="false"
            android:textColor="@color/unselect"
            android:textSize="@dimen/_13ssp"
            app:backgroundTint="@color/skin_type_II" />

        <Button
            android:id="@+id/btn_skintype_III"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:background="@drawable/button_rounded"
            android:text="III"
            android:textAllCaps="false"
            android:textColor="@color/unselect"
            android:textSize="@dimen/_13ssp"
            app:backgroundTint="@color/skin_type_III" />

        <Button
            android:id="@+id/btn_skintype_IV"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:background="@drawable/button_rounded"
            android:text="IV"
            android:textAllCaps="false"
            android:textColor="@color/unselect"
            android:textSize="@dimen/_13ssp"
            app:backgroundTint="@color/skin_type_IV" />

        <Button
            android:id="@+id/btn_skintype_V"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:background="@drawable/button_rounded"
            android:text="V"
            android:textAllCaps="false"
            android:textColor="@color/unselect"
            android:textSize="@dimen/_13ssp"
            app:backgroundTint="@color/skin_type_V" />

        <Button
            android:id="@+id/btn_skintype_VI"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:background="@drawable/button_rounded"
            android:text="VI"
            android:textAllCaps="false"
            android:textColor="@color/unselect"
            android:textSize="@dimen/_13ssp"
            app:backgroundTint="@color/skin_type_VI" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/button_rounded"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/unselect"
        android:textSize="@dimen/_13ssp"
        app:backgroundTint="@null" />

</LinearLayout>